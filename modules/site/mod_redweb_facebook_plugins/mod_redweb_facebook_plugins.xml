<?xml version="1.0" encoding="utf-8"?><extension type="module" version="3.0" client="site" method="upgrade">    <name>MOD_REDSHOP_FACEBOOK_PLUGINS</name>    <version>1.0.0</version>    <creationDate>Dec 2017</creationDate>    <author>redCOMPONENT.com</author>    <authorEmail>email@redcomponent.com</authorEmail>    <copyright>redCOMPONENT.com</copyright>    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>    <description>MOD_REDSHOP_FACEBOOK_PLUGINS_DESC</description>    <files>        <filename module="mod_redweb_facebook_plugins">mod_redweb_facebook_plugins.php</filename>        <folder>tmpl</folder>        <folder>layouts</folder>        <filename>index.html</filename>        <filename>mod_redweb_facebook_plugins.xml</filename>    </files>    <languages>        <language tag="en-GB">language/en-GB/en-GB.mod_redweb_facebook_plugins.ini</language>        <language tag="en-GB">language/en-GB/en-GB.mod_redweb_facebook_plugins.sys.ini</language>    </languages>    <config>        <fields name="params">            <fieldset name="basic">                <field name="facebook_appid" type="text" default="" required="true" label="MOD_REDSHOP_FACEBOOK_APPID" description="" size="10" filter="integer"/>                <field name="facebook_version" type="text" default="2.11" required="true" label="MOD_REDSHOP_FACEBOOK_VERSION" description="" size="10"/>                <field name="facebook_language" type="text" default="en_US" required="true" label="MOD_REDSHOP_FACEBOOK_LANGUAGE" description="" size="10"/>                <field name="facebook_plugin" type="list" default="like" required="true" label="MOD_REDSHOP_FACEBOOK_PLUGIN" description="">                    <option value="comments">MOD_REDSHOP_FACEBOOK_PLUGIN_COMMENTS</option>                    <option value="comment-embded">MOD_REDSHOP_FACEBOOK_PLUGIN_COMMENT_EMBED</option>                    <option value="post">MOD_REDSHOP_FACEBOOK_PLUGIN_POST</option>                    <option value="video">MOD_REDSHOP_FACEBOOK_PLUGIN_VIDEO</option>                    <option value="follow">MOD_REDSHOP_FACEBOOK_PLUGIN_FOLLOW</option>                    <option value="like">MOD_REDSHOP_FACEBOOK_PLUGIN_LIKE</option>                    <option value="quote">MOD_REDSHOP_FACEBOOK_PLUGIN_QUOTE</option>                    <option value="save">MOD_REDSHOP_FACEBOOK_PLUGIN_SAVE</option>                    <option value="send">MOD_REDSHOP_FACEBOOK_PLUGIN_SEND</option>                    <option value="share-button">MOD_REDSHOP_FACEBOOK_PLUGIN_SHARE_BUTTON</option>                </field>                <field name="facebook_numposts" type="text" default="5" label="MOD_REDSHOP_FACEBOOK_NUMPOSTS" description="" size="10" filter="integer"/>                <field name="facebook_colorscheme" type="list" default="light" required="true" label="MOD_REDSHOP_FACEBOOK_COLORSCHEME" description="">                    <option value="light">MOD_REDSHOP_FACEBOOK_PLUGIN_COLORSCHEME_LIGHT</option>                    <option value="dark">MOD_REDSHOP_FACEBOOK_PLUGIN_COLORSCHEME_DARK</option>                </field>                <field name="facebook_mobile" type="list" default="true" required="true" label="MOD_REDSHOP_FACEBOOK_MOBILE" description="">                    <option value="true">JYES</option>                    <option value="false">JNO</option>                </field>                <field name="facebook_width" type="text" default="550" required="true" label="MOD_REDSHOP_FACEBOOK_WIDTH" description="" size="10" filter="integer"/>                <field name="facebook_height" type="text" default="500" required="true" label="MOD_REDSHOP_FACEBOOK_HEIGHT" description="" size="10" filter="integer"/>            </fieldset>            <fieldset name="COMMENTS">                <field name="facebook_comments_url" type="text" default="https://developers.facebook.com/docs/plugins/comments" required="true" label="MOD_REDSHOP_FACEBOOK_URL" description="" size="10" />                <field name="facebook_comments_order_by" type="list" default="social" required="true" label="MOD_REDSHOP_FACEBOOK_COMMENT_ORDER_BY" description="">                    <option value="social">MOD_REDSHOP_FACEBOOK_ORDER_BY_SOCIAL</option>                    <option value="reverse_time">MOD_REDSHOP_FACEBOOK_ORDER_BY_REVERSE_TIME</option>                    <option value="time">MOD_REDSHOP_FACEBOOK_ORDER_BY_TIME</option>                </field>            </fieldset>            <fieldset name="PAGE">                <field name="facebook_page_url" type="text" default="https://www.facebook.com/facebook/" label="MOD_REDSHOP_FACEBOOK_URL" required="true" description="" size="10" />                <field name="facebook_page_tabs" type="list" default="timeline" required="true" label="MOD_REDSHOP_FACEBOOK_PAGE_TIMELINE" description="" multiple="false">                    <option value="timeline">MOD_REDSHOP_FACEBOOK_ORDER_BY_TIMELINE</option>                    <option value="events">MOD_REDSHOP_FACEBOOK_ORDER_BY_EVENT</option>                    <option value="messages">MOD_REDSHOP_FACEBOOK_ORDER_BY_MESSAGES</option>                </field>                <field name="facebook_page_hide_cover" type="list" default="false" required="true" label="MOD_REDSHOP_FACEBOOK_PAGE_HIDE_COVER" description="">                    <option value="true">JYES</option>                    <option value="false">JNO</option>                </field>                <field name="facebook_page_show_facepile" type="list" default="true" required="true" label="MOD_REDSHOP_FACEBOOK_PAGE_SHOW_FACEPILE" description="">                    <option value="true">JYES</option>                    <option value="false">JNO</option>                </field>                <field name="facebook_page_hide_cta" type="list" default="false" required="true" label="MOD_REDSHOP_FACEBOOK_PAGE_HIDE_CTA" description="">                    <option value="true">JYES</option>                    <option value="false">JNO</option>                </field>                <field name="facebook_page_small_header" type="list" default="false" required="true" label="MOD_REDSHOP_FACEBOOK_PAGE_SMALL_HEADER" description="">                    <option value="true">JYES</option>                    <option value="false">JNO</option>                </field>                <field name="facebook_page_adap_container_width" type="list" default="true" required="true" label="MOD_REDSHOP_FACEBOOK_PAGE_ADAP_CONTAINER_WIDTH" description="">                    <option value="true">JYES</option>                    <option value="false">JNO</option>                </field>            </fieldset>        </fields>    </config></extension>