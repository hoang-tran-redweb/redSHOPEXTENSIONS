<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="redshop_payment" method="upgrade">
	<name>PLG_RS_PAYMENT_ONEPAY</name>
	<version>1.5.1</version>
	<redshop>2.0</redshop>
	<creationDate>Sep 2016</creationDate>
	<author>redCOMPONENT.com</author>
	<authorEmail>email@redcomponent.com</authorEmail>
	<authorUrl>http://www.redcomponent.com</authorUrl>
	<copyright>redCOMPONENT.com</copyright>
	<license>GNU General Public License v2</license>
	<description>PLG_RS_PAYMENT_ONEPAY_DESCRIPTION</description>
	<files>
		<filename plugin="rs_payment_onepay">rs_payment_onepay.php</filename>
		<folder>fields</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_onepay.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_redshop_payment_rs_payment_onepay.sys.ini</language>
	</languages>
	<config addfieldpath="/libraries/redshop/form/fields">
		<fields
			name="params"
			addfieldpath="/plugins/redshop_payment/rs_payment_onepay/fields"
		>
			<fieldset name="basic">
				<field
						name="debug_mode"
						type="radio"
						class="btn-group"
						default="1"
						label="PLG_RS_PAYMENT_ONEPAY_DEBUG_MODE"
						description="PLG_RS_PAYMENT_ONEPAY_DEBUG_MODE_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
						name="merchant_id"
						type="text"
						required="true"
						default=""
						label="PLG_RS_PAYMENT_ONEPAY_MERCHANT_ID"
						description="PLG_RS_PAYMENT_ONEPAY_MERCHANT_ID_DESC"
						maxlength="16"
				/>
				<field
						name="merchant_access_code"
						type="text"
						required="true"
						default=""
						label="PLG_RS_PAYMENT_ONEPAY_MERCHANT_ACCESS_CODE"
						description="PLG_RS_PAYMENT_ONEPAY_MERCHANT_ACCESS_CODE_DESC"
						maxlength="8"
				/>
				<field
						name="secure_secret_key"
						type="text"
						default=""
						label="PLG_RS_PAYMENT_ONEPAY_SECURE_SECRET_KEY_LABEL"
						description="PLG_RS_PAYMENT_ONEPAY_SECURE_SECRET_KEY_DESC"
				/>
				<field
						name="language"
						type="list"
						default="vn"
						label="PLG_RS_PAYMENT_ONEPAY_LANGUAGE"
						description="PLG_RS_PAYMENT_ONEPAY_LANGUAGE_DESC"
				>
					<option value="vn">PLG_RS_PAYMENT_ONEPAY_VIETNAM</option>
					<option value="en">PLG_RS_PAYMENT_ONEPAY_ENGLISH</option>
				</field>
				<field
						name="portal_title"
						type="text"
						readonly="readonly"
						default="VPC 3-Party"
						value="VPC 3-Party"
						label="PLG_RS_PAYMENT_ONEPAY_PORTAL_TITLE"
						description="PLG_RS_PAYMENT_ONEPAY_PORTAL_TITLE_DESC"
				/>
				<field
						name="portal_version"
						type="text"
						readonly="readonly"
						default="2"
						value="2"
						label="PLG_RS_PAYMENT_ONEPAY_PORTAL_VERSION"
						description="PLG_RS_PAYMENT_ONEPAY_PORTAL_VERSION_DESC"
				/>
				<field
						name="command_type"
						type="text"
						readonly="readonly"
						default="pay"
						value="pay"
						label="PLG_RS_PAYMENT_ONEPAY_COMMAND_TYPE"
						description="PLG_RS_PAYMENT_ONEPAY_COMMAND_TYPE_DESC"
				/>
				<field
						name="currency_code"
						type="text"
						readonly="readonly"
						default="VND"
						value="VND"
						label="PLG_RS_PAYMENT_ONEPAY_CURRENCY_CODE"
						description="PLG_RS_PAYMENT_ONEPAY_CURRENCY_CODE_DESC"
				/>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="verify_status"
					type="sql"
					query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status WHERE published=1"
					key_field="st_value"
					value_field="st_title"
					default="C"
					label="PLG_RS_PAYMENT_ONEPAY_ORDER_STATUS"
					description="PLG_RS_PAYMENT_ONEPAY_ORDER_STATUS_DESC">
				</field>
				<field
					name="invalid_status"
					type="sql"
					query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status WHERE published=1"
					key_field="st_value"
					value_field="st_title"
					default="P"
					label="PLG_RS_PAYMENT_ONEPAY_ORDER_STATUS_FAIL"
					description="PLG_RS_PAYMENT_ONEPAY_ORDER_STATUS_FAIL_DESC"
				>
				</field>
				<field
					name="capture_status"
					type="sql"
					query="SELECT order_status_code AS st_value, order_status_name AS st_title FROM #__redshop_order_status WHERE published=1"
					key_field="st_value"
					value_field="st_title"
					default="S"
					label="PLG_RS_PAYMENT_ONEPAY_CAPTURE_PAYMENT_STATUS"
					description="PLG_RS_PAYMENT_ONEPAY_CAPTURE_PAYMENT_STATUS_DESC"
				/>
				<field
					name="refund"
					type="radio"
					class="btn-group"
					default="1"
					label="PLG_RS_PAYMENT_ONEPAY_REFUND"
					description="PLG_RS_PAYMENT_ONEPAY_REFUND_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="payment_oprand"
					type="text"
					class="input-large"
					default="-"
					label="PLG_RS_PAYMENT_ONEPAY_PAYMENT_OPERAND"
					description="PLG_RS_PAYMENT_ONEPAY_PAYMENT_OPERAND_DESC"
				/>
				<field
					name="payment_price"
					type="text"
					size="30"
					default=""
					label="PLG_RS_PAYMENT_ONEPAY_PAYMENT_PRICE"
					description="PLG_RS_PAYMENT_ONEPAY_PAYMENT_PRICE_DESC"
				/>
				<field
					name="payment_discount_is_percent"
					type="radio"
					class="btn-group"
					default="1"
					label="PLG_RS_PAYMENT_ONEPAY_DISCOUNT_TYPE"
					description="PLG_RS_PAYMENT_ONEPAY_DISCOUNT_TYPE_DESC"
				>
					<option value="1">PLG_RS_PAYMENT_ONEPAY_PERCENTAGE</option>
					<option value="0">PLG_RS_PAYMENT_ONEPAY_TOTAL</option>
				</field>
				<field
					name="private_person"
					type="radio"
					class="btn-group"
					default="1"
					label="PLG_RS_PAYMENT_ONEPAY_PRIVATE_PERSON"
					description="PLG_RS_PAYMENT_ONEPAY_PRIVATE_PERSON_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="business"
					type="radio"
					class="btn-group"
					default="1"
					label="PLG_RS_PAYMENT_ONEPAY_BUSINESS_PERSON"
					description="PLG_RS_PAYMENT_ONEPAY_BUSINESS_PERSON_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="is_creditcard"
					type="hidden"
					default="0"
					value="0"
				/>
				<field
					name="preloader"
					type="hidden"
					default="0"
					value="0"
				/>
				<field
					name="economic_payment_terms_id"
					type="text"
					class="input-mini"
					default=""
					label="PLG_RS_PAYMENT_ONEPAY_ECONOMIC_CONDITION_ID"
					description="PLG_RS_PAYMENT_ONEPAY_ECONOMIC_CONDITION_ID_DESC"
				/>
				<field
					name="economic_design_layout"
					type="text"
					class="input-mini"
					default=""
					label="PLG_RS_PAYMENT_ONEPAY_ECONOMIC_LAYOUT_ID"
					description="PLG_RS_PAYMENT_ONEPAY_ECONOMIC_LAYOUT_ID_DESC"
				/>
				<field
					name="shopper_group_id"
					type="shoppergrouplist"
					default="0"
					multiple="multiple"
					label="PLG_RS_PAYMENT_ONEPAY_SHOPPER_GROUP"
					description="PLG_RS_PAYMENT_ONEPAY_SHOPPER_GROUP_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
